        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomClassID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomPeople)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomStyleID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdminID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.favorite)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RoomID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RoomID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RoomID })
        </td>
    </tr>
