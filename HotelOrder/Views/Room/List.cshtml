            @Html.DisplayNameFor(model => model.RoomClassID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomPeople)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomStyleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomStatus)
        </th>
